<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:BleTextSender.Resources"
             x:Class="BleTextSender.TextSenderPage"
             Title="Text senden">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Verbunden mit:"
               FontAttributes="Bold"
               FontSize="16" />
        <Label x:Name="DeviceLabel"
               FontSize="14"
               TextColor="DarkGreen" />

        <Entry x:Name="TextEntry"
               Placeholder="Text eingeben..."
               FontSize="16"
               BackgroundColor="#f0f0f0"
               Margin="0,10,0,0" />

        <Button Text="Senden"
                Clicked="OnSendClicked"
                FontSize="16"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="8" />

        <Label x:Name="StatusLabel"
               FontSize="14"
               TextColor="Gray"
               HorizontalOptions="Center" />
        <Button Text="{x:Static resx:AppResources.ClearButton}"
                Clicked="OnClearClicked"
                FontSize="16"
                BackgroundColor="#f44336"
                TextColor="White"
                CornerRadius="8"
                HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>